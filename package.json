{
  "name": "ircv3-server",
  "description": "A basic IRC server framework.",
  "version": "0.0.0",
  "main": "lib",
  "types": "lib/index",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/d-fischer/ircv3-server.git"
  },
  "scripts": {
    "lint": "eslint --ext js,ts src",
    "prettier:check": "prettier --check 'packages/**'",
    "prettier:fix": "prettier --write 'packages/**'",
    "build": "tsc",
    "rebuild": "rimraf lib && yarn run build",
    "start": "node $NODE_DEBUG_OPTION lib/index.js",
    "start:ts": "ts-node $NODE_DEBUG_OPTION src/index.ts"
  },
  "devDependencies": {
    "@d-fischer/eslint-config": "^6.0.3",
    "@types/escape-string-regexp": "0.0.30",
    "@types/node": "^16.11.0",
    "@types/ws": "3.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.1",
    "husky": "^4.3.6",
    "lint-staged": "^11.2.3",
    "prettier": "^2.4.1",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1",
    "typescript": "~4.4.2"
  },
  "dependencies": {
    "@d-fischer/escape-string-regexp": "^5.0.0",
    "@d-fischer/logger": "^0.1.1",
    "@d-fischer/shared-utils": "^3.2.0",
    "@d-fischer/typed-event-emitter": "^3.2.3",
    "ircv3": "^0.28.1",
    "tslib": "^2.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,css,json,md}": "prettier --write",
    "*.{js,ts}": "cross-env DF_ESLINT_NO_TYPE_INFO=1 eslint --fix"
  }
}
